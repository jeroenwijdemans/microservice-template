apiVersion: v1
kind: ReplicationController
metadata:
  name: service-template
spec:
  replicas: 1
  selector:
    app: service-template
  template:
    metadata:
      name: service-template
      labels:
        app: service-template
    spec:
      containers:
      - name: service-template
        image: {{DOCKER_IMAGE}}
        ports:
        - containerPort: 7777
